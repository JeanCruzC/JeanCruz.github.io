<style>
  @keyframes shaky {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(1px, 1px) rotate(0.85deg); }
    50% { transform: translate(-1px, -1px) rotate(-0.85deg); }
    75% { transform: translate(-1px, 1px) rotate(0.85deg); }
  }
</style>

<!-- Projects -->
<div class="mt-6 sm:mt-13">
  <!-- Image Grid -->
  <div class="grid grid-cols-1 gap-3">
    {projects.map((project, index) => (
      <a 
        class="group block relative overflow-hidden rounded-md transition-all duration-300 hover:scale-[1.02] shadow-sm hover:shadow-md" 
        href={project.link}
        target="_blank"
        rel="noopener noreferrer"
        style={{
          animation: `shaky 1s ease-in-out ${index * 0.1}s infinite`
        }}
      >
        <div 
          class="w-full py-1.5 px-4 rounded transition-all duration-300 group-hover:shadow-xl flex justify-between items-center bg-gradient-to-br border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg"
