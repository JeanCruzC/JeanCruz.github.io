---
interface SocialLink {
  icon: string;
  label: string;
  href: string;
}

const profile = {
  name: "Aji Pratama",
  role: "Digital Creator, Software Engineer",
  avatar: "/blue.png",
  bio: [
    "I'm a software engineer turned digital creator, focused on building backend systems, tools, and AI automation. I've worked with companies in Indonesia, Singapore and Japan. Shipping scalable systems and optimizing cloud infrastructure.",
    "Now, I build products like AIPedia.pro, run Kerja Remote Community and build several on going projects, to help solopreneurs and remote workers leverage tech better. I also offer 1-on-1 consultations to simplify and execute faster."
  ]
};

const socialLinks: SocialLink[] = [
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2" />
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>`,
    label: "ajipratama.net@gmail.com",
    href: "mailto:ajipratama.net@gmail.com"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>`,
    label: "@ajipratamacom",
    href: "https://instagram.com/ajipratamacom"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>`,
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/aji-pratama-net/"
  },
  {
    icon: `<svg class="shrink-0 size-3.5 text-gray-800 dark:text-neutral-200" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2.5 19.5A3.5 3.5 0 0 1 6 16h12a3.5 3.5 0 0 1 3.5 3.5"></path>
            <path d="M6 16v-2a6 6 0 0 1 12 0v2"></path>
            <circle cx="12" cy="7" r="3"></circle>
          </svg>`,
    label: "Medium",
    href: "https://medium.com/@ajipratama"
  }
];
---

<!-- Profile -->
<div class="flex items-center gap-x-3">
  <div class="shrink-0">
    <img class="shrink-0 size-16 rounded-full" src={profile.avatar} alt={profile.name}>
  </div>

  <div class="grow">
    <h1 class="text-lg font-medium text-gray-800 dark:text-neutral-200">
      {profile.name}
    </h1>
    <p class="text-sm text-gray-600 dark:text-neutral-400">
      {profile.role}
    </p>
  </div>
</div>
<!-- End Profile -->

<!-- About -->
<div class="mt-8">
  {profile.bio.map((paragraph) => (
    <p class="text-sm text-gray-600 dark:text-neutral-400 mt-3 first:mt-0">
      {paragraph}
    </p>
  ))}

  <ul class="mt-5 flex flex-col gap-y-3">
    {socialLinks.map((link) => (
      <li class="flex items-center gap-x-2.5">
        <Fragment set:html={link.icon} />
        <a class="text-[13px] text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-hidden focus:decoration-2 dark:text-neutral-500 dark:hover:text-neutral-400" href={link.href} target="_blank">
          {link.label}
        </a>
      </li>
    ))}
  </ul>

  <!-- Consultation Button -->
  <a 
    href="https://utas.me/ajipratama/consultation" 
    target="_blank"
    rel="noopener noreferrer"
    class="shadow mt-8 w-full block text-center py-3 text-sm font-medium text-white transition-colors rounded-md bg-blue-600 hover:bg-blue-900"
  >
      1-on-1 Consultation
    </span>
  </a>
</div>
<!-- End About -->
