---
const projects = [
  {
    title: 'AI-Powered Career Toolkit',
    cat: 'AI/ML',
    year: 2024,
    status: 'Completed',
    summary: 'Plataforma full‑stack para CVs e entrevistas con IA.',
    stack: ['React', 'Django', 'OpenAI API'],
    ctas: [
      { label: 'Live', href: '#' },
      { label: 'Code', href: '#' }
    ]
  },
  {
    title: 'WFM Scheduling Optimizer',
    cat: 'Full-Stack',
    year: 2025,
    status: 'Completed',
    summary: 'Generador de turnos con validación de cobertura y metaheurísticas.',
    stack: ['Python', 'OR-Tools', 'Streamlit'],
    ctas: [{ label: 'Demo', href: '#' }]
  },
  {
    title: 'CX KPI Dashboards',
    cat: 'Dashboards',
    year: 2024,
    status: 'In progress',
    summary: 'Suite de tableros en Looker Studio para SLA y experiencia.',
    stack: ['Looker Studio', 'BigQuery'],
    ctas: [{ label: 'View', href: '#' }]
  }
];
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jean Cruz – Workforce & AI for CX</title>
    <meta
      name="description"
      content="Portafolio de Jean Cruz: Workforce Intelligence, Forecasting, Automatización y CX Analytics. Consultorías y proyectos en LATAM & Norteamérica."
    />
    <meta name="theme-color" content="#f6f8fb" />
    <link rel="icon" href="/favicon.png" />
    <style>
      /* ======== Design tokens (light, recruiter-friendly) ======== */
      :root {
        --bg: #f6f8fb; /* base background */
        --bg-spot1: #bcd7ff33; /* subtle spotlight 1 */
        --bg-spot2: #f8d3ff33; /* subtle spotlight 2 */
        --surface: #ffffff; /* cards/nav */
        --border: #e5e7eb; /* card borders */
        --text: #0f172a; /* primary text */
        --muted: #475569; /* secondary text */
        --accent: #2563eb; /* primary accent (blue) */
        --accent-2: #16a34a; /* success */
        --radius: 16px;
        --shadow: 0 12px 40px rgba(15, 23, 42, 0.08);
        --nav-h: 72px;
      }

      /* ======== Reset & base ======== */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        font: 16px/1.5 Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Noto Sans,
          'Apple Color Emoji', 'Segoe UI Emoji';
        color: var(--text);
        background:
          radial-gradient(1000px 500px at 20% -5%, var(--bg-spot1), transparent 60%),
          radial-gradient(1000px 600px at 80% 0%, var(--bg-spot2), transparent 60%),
          var(--bg);
      }

      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }

      .container {
        width: min(1100px, 92%);
        margin-inline: auto;
      }

      .grid {
        display: grid;
        gap: 24px;
      }

      .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.7rem;
        border-radius: 999px;
        background: #eef2ff;
        color: #3730a3;
        font-weight: 600;
        font-size: 0.8rem;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.7rem 1.1rem;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--surface);
        box-shadow: var(--shadow);
        color: var(--text);
        transition: 0.2s transform, 0.2s box-shadow;
      }

      .btn.primary {
        background: linear-gradient(180deg, #4f8bff, #2563eb);
        color: #fff;
        border-color: #1d4ed8;
      }

      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 14px 44px rgba(15, 23, 42, 0.12);
      }

      .btn.icon {
        padding: 0.55rem 0.8rem;
      }

      .muted {
        color: var(--muted);
      }

      .card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
      }

      .card.pad {
        padding: 20px;
      }

      /* ======== Navigation (sticky, non-overlapping) ======== */
      header.site-nav {
        position: sticky;
        top: 0;
        z-index: 9999;
        backdrop-filter: blur(8px);
        background: color-mix(in srgb, var(--surface) 86%, transparent);
        border-bottom: 1px solid var(--border);
      }

      .nav-inner {
        height: var(--nav-h);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-weight: 700;
      }

      .brand .dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: #6b8cff;
        box-shadow: 0 0 0 3px #6b8cff33;
      }

      nav ul {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 18px;
      }

      nav a {
        color: var(--text);
        font-weight: 600;
      }

      nav a[aria-current='page'] {
        color: var(--accent);
      }

      main {
        padding-top: 18px; /* header already sticky */
      }

      [id] {
        scroll-margin-top: calc(var(--nav-h) + 16px);
      }

      /* ======== Hero (Z-pattern: headline -> CTAs -> visual side) ======== */
      .hero {
        padding: 40px 0 24px;
      }

      .hero-wrap {
        display: grid;
        grid-template-columns: 1.15fr 0.85fr;
        gap: 32px;
        align-items: center;
      }

      .hero h1 {
        font-size: clamp(32px, 5.6vw, 56px);
        line-height: 1.05;
        letter-spacing: -0.02em;
        margin: 0 0 10px;
      }

      .kicker {
        font-weight: 700;
        letter-spacing: 0.08em;
        color: #1d4ed8;
        text-transform: uppercase;
        font-size: 0.82rem;
      }

      .hero p {
        font-size: clamp(16px, 2.2vw, 18px);
        margin: 10px 0 18px;
      }

      .cta-row {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }

      .hero-visual {
        aspect-ratio: 4 / 3;
        border-radius: var(--radius);
        overflow: hidden;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
        background: linear-gradient(135deg, #f1f5f9, #ffffff 40%, #eef2ff);
        display: grid;
        place-items: center;
      }

      .hero-visual strong {
        color: #111827;
      }

      /* ======== Metrics ======== */
      .metrics {
        padding: 16px 0 0;
      }

      .metrics ul {
        grid-template-columns: repeat(3, 1fr);
      }

      .metric {
        padding: 18px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
      }

      .metric h3 {
        font-size: clamp(24px, 3.2vw, 32px);
        margin: 0;
      }

      .metric p {
        margin: 0;
        color: var(--muted);
      }

      /* ======== Services / Focus areas (scannable) ======== */
      .features {
        padding: 26px 0;
      }

      .features .grid {
        grid-template-columns: repeat(4, 1fr);
      }

      .feature {
        padding: 16px;
      }

      .feature h4 {
        margin: 4px 0 6px;
      }

      .feature p {
        margin: 0;
      }

      /* ======== Projects (with filters) ======== */
      .filters {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin: 4px 0 12px;
      }

      #projects.grid {
        grid-template-columns: repeat(3, 1fr);
      }

      .project header {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .project .year {
        margin-left: auto;
        color: var(--muted);
        font-size: 0.85rem;
      }

      .project h3 {
        margin: 8px 0 6px;
      }

      .stack {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
      }

      .stack span {
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 0.25rem 0.5rem;
        font-size: 0.85rem;
      }

      .actions {
        display: flex;
        gap: 8px;
        margin-top: 10px;
      }

      /* ======== Contact ======== */
      .contact {
        padding: 30px 0 50px;
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 24px;
        align-items: start;
      }

      .contact form {
        display: grid;
        gap: 12px;
      }

      .field {
        display: grid;
        gap: 6px;
      }

      .field input,
      .field textarea {
        padding: 0.8rem 1rem;
        border: 1px solid var(--border);
        border-radius: 12px;
        font: inherit;
      }

      /* ======== Footer ======== */
      footer {
        border-top: 1px solid var(--border);
        padding: 28px 0 38px;
        color: var(--muted);
      }

      /* reveal on scroll */
      .reveal {
        opacity: 0;
        transform: translateY(18px);
        transition: 0.6s ease;
      }

      .reveal.on {
        opacity: 1;
        transform: none;
      }

      /* responsive */
      @media (max-width: 960px) {
        .hero-wrap {
          grid-template-columns: 1fr;
        }

        .features .grid {
          grid-template-columns: repeat(2, 1fr);
        }

        #projects.grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .metrics ul {
          grid-template-columns: 1fr 1fr 1fr;
        }

        .contact {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 640px) {
        nav ul {
          display: none;
        }

        .metrics ul {
          grid-template-columns: 1fr;
        }

        .features .grid {
          grid-template-columns: 1fr;
        }

        #projects.grid {
          grid-template-columns: 1fr;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }

        .reveal {
          transition: none;
        }
      }
    </style>
  </head>
  <body>
    <!-- ============ NAVBAR ============ -->
    <header class="site-nav">
      <div class="container nav-inner">
        <div class="brand"><span class="dot"></span> <span id="brand-name">Jean Cruz</span></div>
        <nav>
          <ul>
            <li><a href="#inicio" data-i18n="nav.home" aria-current="page">Inicio</a></li>
            <li><a href="#servicios" data-i18n="nav.services">Servicios</a></li>
            <li><a href="#projects" data-i18n="nav.projects">Proyectos</a></li>
            <li><a href="#cv" data-i18n="nav.cv">CV</a></li>
            <li><a href="#contacto" data-i18n="nav.contact">Contacto</a></li>
          </ul>
        </nav>
        <button id="lang-toggle" class="btn icon" aria-label="Change language">ES/EN</button>
      </div>
    </header>

    <main>
      <!-- ============ HERO ============ -->
      <section id="inicio" class="hero container reveal">
        <div class="hero-wrap">
          <div>
            <div class="kicker" data-i18n="hero.kicker">Workforce & IA para CX</div>
            <h1 data-i18n="hero.title">
              Estrategias y automatizaciones que elevan la experiencia del cliente y el rendimiento operativo
            </h1>
            <p class="muted" data-i18n="hero.subtitle">Disponible para proyectos remotos e híbridos en LATAM y Norteamérica.</p>
            <div class="cta-row">
              <a class="btn primary" href="/assets/cv/JeanCruzCV.pdf" data-i18n="cta.resume" target="_blank" rel="noopener"
                >Descargar CV</a
              >
              <a class="btn" href="#contacto" data-i18n="cta.meeting">Agendar una reunión</a>
            </div>
          </div>
          <div class="hero-visual card pad">
            <strong data-i18n="hero.visual">Dashboards · Forecast · Scheduling · RPA</strong>
          </div>
        </div>
      </section>

      <!-- ============ METRICS ============ -->
      <section class="metrics container reveal">
        <ul class="grid">
          <li class="card metric">
            <div>
              <h3>6+</h3>
              <p class="muted" data-i18n="m.years">Años liderando WFM</p>
            </div>
          </li>
          <li class="card metric">
            <div>
              <h3>25+</h3>
              <p class="muted" data-i18n="m.projects">Proyectos de optimización</p>
            </div>
          </li>
          <li class="card metric">
            <div>
              <h3>98%</h3>
              <p class="muted" data-i18n="m.sla">SLA de cumplimiento</p>
            </div>
          </li>
        </ul>
      </section>

      <!-- ============ SERVICES / FOCUS ============ -->
      <section id="servicios" class="features container reveal">
        <h2 data-i18n="sec.services">Qué puedo aportar</h2>
        <div class="grid">
          <article class="card feature">
            <span class="pill">Dashboards</span>
            <h4>Looker Studio · Power BI</h4>
            <p class="muted" data-i18n="feat.dash">
              Indicadores accionables y storytelling visual para equipos no técnicos.
            </p>
          </article>
          <article class="card feature">
            <span class="pill">Automatizaciones</span>
            <h4>Python · RPA · Streamlit</h4>
            <p class="muted" data-i18n="feat.auto">Bots y flujos que reducen tiempos operativos y errores.</p>
          </article>
          <article class="card feature">
            <span class="pill">Forecasting</span>
            <h4>Time Series · ML</h4>
            <p class="muted" data-i18n="feat.forecast">
              Pronósticos claros con supuestos explícitos para tomar decisiones.
            </p>
          </article>
          <article class="card feature">
            <span class="pill">CX Analytics</span>
            <h4>WFM · SLA · QA</h4>
            <p class="muted" data-i18n="feat.cx">Modelos de cobertura y calidad enfocados en impacto de negocio.</p>
          </article>
        </div>
      </section>

      <!-- ============ PROJECTS ============ -->
      <section class="container reveal">
        <div class="filters">
          <button data-filter="all" class="btn" data-i18n="filter.all">Todos</button>
          <button data-filter="AI/ML" class="btn">AI/ML</button>
          <button data-filter="Full-Stack" class="btn">Full-Stack</button>
          <button data-filter="Dashboards" class="btn">Dashboards</button>
        </div>
        <section id="projects" class="grid">
          {projects.map((project) => (
            <article class="card pad project" data-cat={project.cat}>
              <header>
                <span class="pill">{project.cat}</span>
                <span class="pill">{project.status}</span>
                <span class="year">{project.year}</span>
              </header>
              <h3>{project.title}</h3>
              <p class="muted">{project.summary}</p>
              <div class="stack">
                {project.stack.map((item) => (
                  <span>{item}</span>
                ))}
              </div>
              <div class="actions">
                {project.ctas.map((cta) => (
                  <a class="btn" href={cta.href} target="_blank" rel="noopener">
                    {cta.label}
                  </a>
                ))}
              </div>
            </article>
          ))}
        </section>
      </section>

      <!-- ============ CV ANCHOR ============ -->
      <section id="cv" class="container reveal" style="padding: 24px 0">
        <div class="card pad">
          <h2 data-i18n="sec.cv">Currículum</h2>
          <p class="muted" data-i18n="cv.text">
            Descarga mi CV actualizado y conoce experiencia, formación y herramientas.
          </p>
          <a class="btn primary" href="/assets/cv/JeanCruzCV.pdf" target="_blank" rel="noopener" data-i18n="cta.resume">
            Descargar CV
          </a>
        </div>
      </section>

      <!-- ============ CONTACT ============ -->
      <section id="contacto" class="contact container reveal">
        <div class="card pad">
          <h2 data-i18n="sec.contact">Conectemos</h2>
          <p class="muted">jeancruzc@gmail.com · Lima, Perú (GMT-5)</p>
          <div class="cta-row">
            <a class="btn" href="https://www.linkedin.com/in/workforceleadjean/" target="_blank" rel="noopener">
              LinkedIn
            </a>
            <a class="btn" href="https://calendly.com/" target="_blank" rel="noopener" data-i18n="cta.meeting">
              Agendar una reunión
            </a>
          </div>
        </div>
        <div class="card pad">
          <form action="mailto:jeancruzc@gmail.com" method="post" enctype="text/plain">
            <div class="field">
              <label data-i18n="form.name">Nombre</label>
              <input required name="name" />
            </div>
            <div class="field">
              <label>Email</label>
              <input required type="email" name="email" />
            </div>
            <div class="field">
              <label data-i18n="form.msg">Mensaje</label>
              <textarea required rows="4" name="message"></textarea>
            </div>
            <button class="btn primary" type="submit" data-i18n="form.send">Enviar</button>
          </form>
        </div>
      </section>
    </main>

    <footer>
      <div class="container" style="display: flex; justify-content: space-between; gap: 12px; flex-wrap: wrap">
        <div>© <span id="year"></span> Jean Cruz</div>
        <div class="muted">Workforce Intelligence · Forecasting · Automatización · CX Analytics</div>
      </div>
    </footer>

    <script>
      // ======== Reveal on scroll (gentle) ========
      const io = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) entry.target.classList.add('on');
          });
        },
        { threshold: 0.14 }
      );
      document.querySelectorAll('.reveal').forEach((el) => io.observe(el));

      // ======== Year ========
      document.getElementById('year').textContent = new Date().getFullYear();

      // ======== Simple filters ========
      document.querySelectorAll('.filters [data-filter]').forEach((button) => {
        button.addEventListener('click', () => {
          const filter = button.dataset.filter;
          document.querySelectorAll('.project').forEach((card) => {
            card.style.display = filter === 'all' || card.dataset.cat === filter ? '' : 'none';
          });
        });
      });

      // ======== i18n minimal (ES/EN) ========
      const i18n = {
        es: {
          'nav.home': 'Inicio',
          'nav.services': 'Servicios',
          'nav.projects': 'Proyectos',
          'nav.cv': 'CV',
          'nav.contact': 'Contacto',
          'hero.kicker': 'Workforce & IA para CX',
          'hero.title': 'Estrategias y automatizaciones que elevan la experiencia del cliente y el rendimiento operativo',
          'hero.subtitle': 'Disponible para proyectos remotos e híbridos en LATAM y Norteamérica.',
          'hero.visual': 'Dashboards · Forecast · Scheduling · RPA',
          'cta.resume': 'Descargar CV',
          'cta.meeting': 'Agendar una reunión',
          'm.years': 'Años liderando WFM',
          'm.projects': 'Proyectos de optimización',
          'm.sla': 'SLA de cumplimiento',
          'sec.services': 'Qué puedo aportar',
          'feat.dash': 'Indicadores accionables y storytelling visual para equipos no técnicos.',
          'feat.auto': 'Bots y flujos que reducen tiempos operativos y errores.',
          'feat.forecast': 'Pronósticos claros con supuestos explícitos para tomar decisiones.',
          'feat.cx': 'Modelos de cobertura y calidad enfocados en impacto de negocio.',
          'sec.cv': 'Currículum',
          'cv.text': 'Descarga mi CV actualizado y conoce experiencia, formación y herramientas.',
          'sec.contact': 'Conectemos',
          'form.name': 'Nombre',
          'form.msg': 'Mensaje',
          'form.send': 'Enviar',
          'filter.all': 'Todos'
        },
        en: {
          'nav.home': 'Home',
          'nav.services': 'Services',
          'nav.projects': 'Projects',
          'nav.cv': 'Resume',
          'nav.contact': 'Contact',
          'hero.kicker': 'Workforce & AI for CX',
          'hero.title': 'Strategies & automations that elevate customer experience and operational performance',
          'hero.subtitle': 'Open to remote/hybrid projects in LATAM & North America.',
          'hero.visual': 'Dashboards · Forecast · Scheduling · RPA',
          'cta.resume': 'Download Resume',
          'cta.meeting': 'Schedule a meeting',
          'm.years': 'Years leading WFM',
          'm.projects': 'Optimization projects',
          'm.sla': 'SLA achievement',
          'sec.services': 'What I bring',
          'feat.dash': 'Actionable KPIs and visual storytelling for non-technical teams.',
          'feat.auto': 'Bots and flows that reduce operational time and errors.',
          'feat.forecast': 'Clear forecasts with explicit assumptions for decisions.',
          'feat.cx': 'Coverage & quality models focused on business impact.',
          'sec.cv': 'Resume',
          'cv.text': 'Download my updated resume with experience, education and tools.',
          'sec.contact': 'Let’s connect',
          'form.name': 'Name',
          'form.msg': 'Message',
          'form.send': 'Send',
          'filter.all': 'All'
        }
      };

      function setLang(lang) {
        document.documentElement.lang = lang;
        localStorage.setItem('lang', lang);
        document.querySelectorAll('[data-i18n]').forEach((el) => {
          const key = el.dataset.i18n;
          if (i18n[lang][key]) el.textContent = i18n[lang][key];
        });
        document.getElementById('brand-name').textContent = lang === 'en' ? 'Jean Cruz' : 'Jean Cruz';
      }

      setLang(localStorage.getItem('lang') || 'es');

      document.getElementById('lang-toggle').addEventListener('click', () => {
        const next = document.documentElement.lang === 'es' ? 'en' : 'es';
        setLang(next);
      });
    </script>
  </body>
</html>
