---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectGrid from "../../components/ProjectGrid.astro";
import ContactForm from "../../components/ContactForm.astro";
import ReportShowcase from "../../components/ReportShowcase.astro";
import { projectsEn } from "../../data/projects";
import { reportsEn } from "../../data/reports";

const cvUrl = "/cv/JeanCruz_CV_EN.pdf";
const siteUrl = "https://jeancruzc.github.io";
---
<BaseLayout
  title="Jean Cruz — WFM & BI Lead"
  description="I orchestrate WFM and BI data so coverage and demand become operational decisions."
  lang="en"
  canonicalUrl={`${siteUrl}/en/`}
  alternateLocales={[{ lang: "es", href: `${siteUrl}/` }]}
  navItems={[
    { href: "#about", label: "About" },
    { href: "#skills", label: "Skills" },
    { href: "#projects", label: "Work" },
    { href: "#cv", label: "Resume" },
    { href: "#contact", label: "Contact", isCta: true }
  ]}
  primaryCtaHref="#contact"
  primaryCtaLabel="Contact"
>
  <section class="hero" data-aos="fade-up">
    <div class="hero-grid">
      <div class="hero-copy">
        <div class="hero-brand">
          <span class="brand-pill">Jean Cruz</span>
          <span class="hero-role">Data analyst — Lima · Remote</span>
        </div>
        <h1>I turn data into clear decisions.</h1>
        <p class="hero-sub">
          Data analyst focused on CX and WFM. I design executive dashboards and forecasting processes, integrating
          Python / SQL / Power BI / Looker Studio to answer business questions and prioritize actions.
        </p>
        <ul class="hero-bullets">
          <li><strong>Interval forecasting</strong> and capacity planning for multichannel operations.</li>
          <li><strong>Executive dashboards</strong> with lightweight alerts and recurring reviews.</li>
          <li><strong>Automation</strong> of reports and data flows to save operational time.</li>
        </ul>
        <div class="hero-actions">
          <a class="cta hero-primary" href="#contact" data-analytics-event="Hero Contact CTA EN">Contact</a>
          <a
            class="hero-secondary"
            href={cvUrl}
            target="_blank"
            rel="noopener"
            data-analytics-event="Hero Download CV EN"
          >
            Download resume
          </a>
        </div>
      </div>
      <div class="hero-media">
        <img class="hero-avatar" src="/profile.png" alt="Jean Cruz — Data analyst" width="320" height="320" />
      </div>
    </div>
  </section>

  <ReportShowcase
    reports={reportsEn}
    heading="Actionable dashboards"
    intro="Sample reports covering interval coverage, proactive alerts and channel productivity."
    lang="en"
  />

  <section id="about" class="section" data-aos="fade-up">
    <h2 class="h2">About</h2>
    <div class="about-content card">
      <p>
        Business-oriented data analyst. I connect forecasting, dashboards and automation so operations can decide
        fast.
      </p>
      <p>
        I partner with CX/WFM teams and business functions to align capacity, demand and follow-up.
      </p>
      <ul>
        <li>I integrate Python/SQL/Power BI with internal sources into a reproducible flow.</li>
        <li>I design simple dashboards with clear priorities and follow-up cadences.</li>
      </ul>
    </div>
  </section>

  <section id="skills" class="section" data-aos="fade-up">
    <h2 class="h2">Skills</h2>
    <div class="grid grid-3">
      <div class="card">
        <h3>Languages</h3>
        <ul class="pill-list">
          <li>Python</li>
          <li>SQL</li>
          <li>DAX</li>
        </ul>
      </div>
      <div class="card">
        <h3>BI &amp; Data</h3>
        <ul class="pill-list">
          <li>Power BI</li>
          <li>Looker Studio</li>
          <li>Excel/Sheets</li>
          <li>ETL/Modeling</li>
        </ul>
      </div>
      <div class="card">
        <h3>CX–WFM</h3>
        <ul class="pill-list">
          <li>Coverage planning</li>
          <li>Interval forecasting</li>
          <li>Automation with Python/SQL</li>
        </ul>
      </div>
    </div>
  </section>

  <ProjectGrid
    projects={projectsEn}
    heading="Featured work"
    intro="Recent collaborations connecting forecasting, executive dashboards and automation for CX."
  />

  <section id="cv" class="section" data-aos="fade-up">
    <h2 class="h2">Experience snapshot</h2>
    <div class="card experience">
      <article>
        <h3>Workforce Lead — CX Operations</h3>
        <ul>
          <li>Regional planning that turns forecasts into staffing and budgeting roadmaps.</li>
          <li>Executive dashboards and governance rituals for leadership teams.</li>
        </ul>
      </article>
      <article>
        <h3>Senior CX Planner — Global Operations</h3>
        <ul>
          <li>Automated reporting and daily dashboards with Python/SQL/Power BI.</li>
          <li>Implemented walk-forward forecasting and multichannel productivity insights.</li>
        </ul>
      </article>
      <p class="experience-note">Background in Communications & Advertising · Data/BI and WFM certifications.</p>
      <p>
        <a href={cvUrl} target="_blank" rel="noopener" data-analytics-event="Experience Download CV EN">Download full resume (PDF)</a>
      </p>
    </div>
  </section>

  <section id="contact" class="section" data-aos="fade-up">
    <h2 class="h2">Contact</h2>
    <p class="contact-intro">Need to strengthen WFM or BI? Let's jump on a short call.</p>
    <ContactForm lang="en" formspreeId="mwkgjqgd" trackEvent="Contact Form EN" />
  </section>
</BaseLayout>
