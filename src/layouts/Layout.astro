---
// import '../styles/base.css';
import '../styles/preline.min.css';

interface Props {
  title?: string;
}

const { title = "Aji Pratama" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G0KYTSD92T"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-G0KYTSD92T');
    </script>
    <style>
      body {
        background: linear-gradient(135deg, #ffffff 0%, #eef4ff 100%);
        position: relative;
        overflow-x: hidden;
      }
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
          radial-gradient(circle at 75% 25%, rgba(138, 85, 255, 0.25), transparent 45%),
          radial-gradient(circle at 25% 75%, rgba(72, 104, 224, 0.35), transparent 45%),
          radial-gradient(circle at 50% 50%, rgba(72, 104, 224, 0.1), transparent 65%);
        pointer-events: none;
        z-index: -1;
      }
      .dark body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      }
      .dark body::before {
        background: 
          radial-gradient(circle at 75% 25%, rgba(138, 85, 255, 0.3), transparent 45%),
          radial-gradient(circle at 25% 75%, rgba(72, 104, 224, 0.4), transparent 45%),
          radial-gradient(circle at 50% 50%, rgba(72, 104, 224, 0.15), transparent 65%);
      }
      
      /* Tambahan efek blur pada elemen dengan class .glass */
      .glass {
        background: rgba(255, 255, 255, 0.65);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 
          0 8px 32px rgba(72, 104, 224, 0.15),
          0 0 0 1px rgba(72, 104, 224, 0.05);
      }
      
      .dark .glass {
        background: rgba(15, 23, 42, 0.65);
        border: 1px solid rgba(72, 104, 224, 0.1);
        box-shadow: 
          0 8px 32px rgba(72, 104, 224, 0.2),
          0 0 0 1px rgba(72, 104, 224, 0.1);
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
  <script is:inline>
    const html = document.querySelector('html');
    localStorage.setItem('hs_theme', 'light');
    html.classList.remove('dark');
    html.classList.add('light');
  </script>
</html>
