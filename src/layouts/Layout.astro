---
import '../styles/preline.min.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Jean Cruz | Portafolio Profesional',
  description = 'Portafolio interactivo para mostrar dashboards, proyectos y experiencia profesional.'
} = Astro.props;

const navLinks = [
  { href: '#sobre-mi', label: 'Sobre mí' },
  { href: '#dashboards', label: 'Dashboards' },
  { href: '#proyectos', label: 'Proyectos' },
  { href: '#servicios', label: 'Servicios' },
  { href: '#cv', label: 'CV' },
  { href: '#contacto', label: 'Contacto' }
];

const socialCardStyle = `
  <svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#eef2ff;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#d9f99d;stop-opacity:1" />
      </linearGradient>
      <filter id="blur">
        <feGaussianBlur stdDeviation="80" />
      </filter>
    </defs>
    <rect width="100%" height="100%" fill="url(#bg)" />
    <circle cx="200" cy="120" r="180" fill="rgba(79,70,229,0.35)" filter="url(#blur)" />
    <circle cx="980" cy="520" r="220" fill="rgba(16,185,129,0.25)" filter="url(#blur)" />
    <text x="50%" y="52%" font-family="'Inter', 'Segoe UI', sans-serif" font-size="60" text-anchor="middle" fill="#1f2937">${title}</text>
  </svg>
`;

const socialCardUrl = `data:image/svg+xml,${encodeURIComponent(socialCardStyle)}`;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Social Card Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialCardUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jeancruzc.github.io" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialCardUrl} />

    <style>
      :root {
        color-scheme: light;
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        background-color: #f8fafc;
      }

      html {
        scroll-behavior: smooth;
        scroll-padding-top: 6rem;
      }

      body {
        min-height: 100vh;
        margin: 0;
        color: #0f172a;
        background: radial-gradient(circle at 10% 20%, rgba(79, 70, 229, 0.15), transparent 55%),
                    radial-gradient(circle at 90% 10%, rgba(16, 185, 129, 0.12), transparent 45%),
                    radial-gradient(circle at 50% 80%, rgba(59, 130, 246, 0.1), transparent 60%),
                    #f8fafc;
      }

      body::before {
        content: '';
        position: fixed;
        inset: 0;
        pointer-events: none;
        background:
          radial-gradient(circle at 20% 30%, rgba(147, 197, 253, 0.35), transparent 55%),
          radial-gradient(circle at 80% 70%, rgba(134, 239, 172, 0.35), transparent 65%);
        opacity: 0.65;
        z-index: -1;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      .glass {
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(148, 163, 184, 0.3);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        box-shadow: 0 20px 45px rgba(15, 23, 42, 0.08);
      }
    </style>
  </head>
  <body class="relative">
    <header class="pointer-events-none">
      <nav class="glass pointer-events-auto fixed inset-x-0 top-6 mx-auto flex w-[min(100%-2.5rem,72rem)] items-center justify-between gap-6 rounded-full px-6 py-3 text-sm font-medium text-slate-600 shadow-2xl">
        <a href="#inicio" class="flex items-center gap-2 text-slate-900">
          <span class="size-2 rounded-full bg-indigo-500"></span>
          Jean Cruz
        </a>
        <div class="hidden items-center gap-2 md:flex">
          {navLinks.map((item) => (
            <a
              href={item.href}
              class="group inline-flex items-center gap-2 rounded-full px-3 py-2 transition hover:bg-slate-900/90 hover:text-white"
            >
              <span class="size-1.5 rounded-full bg-slate-300 transition group-hover:bg-white"></span>
              {item.label}
            </a>
          ))}
        </div>
        <a
          href="#contacto"
          class="hidden items-center gap-2 rounded-full bg-slate-900 px-4 py-2 text-white transition hover:-translate-y-0.5 hover:bg-indigo-600 md:inline-flex"
        >
          Conversemos
          <span aria-hidden="true">↗</span>
        </a>
      </nav>
    </header>
    <main class="pt-32 md:pt-36">
      <slot />
    </main>
  </body>
</html>
